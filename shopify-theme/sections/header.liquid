{%- liquid
  assign logo_width = section.settings.logo_width
  assign logo_height = logo_width | divided_by: section.settings.logo.aspect_ratio
  if logo_height > 100
    assign logo_width = 100 | times: section.settings.logo.aspect_ratio
    assign logo_height = 100
  endif
-%}

<header class="header-wrapper">
  <div class="header">
    <nav class="nav">
      <ul class="nav__link-list">
        <li class="nav__link"><a href="/collections/all">Shop</a></li>
        <li class="nav__link nav__link--hide-on-mobile"><a href="/#our-farm">Our farm</a></li>
        <li class="nav__link nav__link--hide-on-mobile"><a href="/#our-inspiration">Our inspiration</a></li>
      </ul>
      <a class="nav__logo" href="/">
        <img
          src="{{ 'logo.svg' | asset_url }}"
          width="{{ logo_width }}"
          height="{{ logo_height }}"
          alt="{{ shop.name }}"
        >
      </a>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Logo width"
    }
  ]
}
{% endschema %} 